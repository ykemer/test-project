{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "commonjs",
    "types": ["node", "jest"],
    "incremental": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "/config/*": ["src/config/*"],
      "/libs/*": ["src/libs/*"],
      "/apps/*": ["src/apps/*"]
    },
    
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules", "src/**/*.acceptance.ts", "src/**/*.unit.ts","src/**/*.integration.ts", "e2e/**/*"],
  "files": [
    "src/types/index.d.ts"
  ]
}